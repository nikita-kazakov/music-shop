<p id="notice"><%= notice %></p>


<div class="container">
  <h2><%= @instrument.brand %> <%= @instrument.model %></h2>
  <div class="row">
    <div class="col-8">

      <img class="img-fluid" src="https://via.placeholder.com/400x300" alt="instrument image">

      <p class="description lead pt-3"><%= @instrument.description %></p>
      <h3>Product Specs</h3>


      <table class="table table-striped">

        <tbody>
        <tr>
          <th scope="row">Brand</th>
          <td><%= @instrument.brand %></td>
        </tr>

        <tr>
          <th scope="row">Model</th>
          <td><%= @instrument.model %></td>
        </tr>

        <tr>
          <th scope="row">Finish</th>
          <td><%= @instrument.finish %></td>
        </tr>

        <tr>
          <th scope="row">Condition</th>
          <td><%= @instrument.condition %></td>
        </tr>

        <tr>
          <th scope="row">Sold By:</th>
          <td>Nikita</td>
        </tr>


        </tbody>
      </table>



    </div>
    <div class="col-4 ">
      <div class="side-wrapper border rounded">
        <p class="price-show text-center m-0">$1200</p>
        <div class="price-shipping text-center text-muted">+$40 Shipping</div>
        <a href="#" class="btn btn-success w-100 mt-5">Add to Cart</a>

      </div>
    </div>

    <%= link_to 'Back', instruments_path, class:"btn btn-primary mr-2" %>
    <%= link_to 'Edit', edit_instrument_path(@instrument), class:"btn btn-primary" %> |


  </div>
</div>


