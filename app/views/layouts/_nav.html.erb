<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-between">
      <div class="logo">
        <a href="<%=root_path %>"  class="h3">Metal Pedal</a>
      </div>

      <div class="menu-items align-self-center">
        <%if user_signed_in? %>
          <%=link_to "Account", edit_user_registration_path, class:"p-2" %>
          <%=link_to "Sign Out", destroy_user_session_path, method: :delete, class:"p-2" %>
        <%else %>
          <%=link_to "Sign In", new_user_session_path, class:"p-2" %>
          <%=link_to "Register", new_user_registration_path, class:"p-2" %>
        <%end %>

      </div>
    </div>
  </div>
</div>